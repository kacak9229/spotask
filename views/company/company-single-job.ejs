<% layout('blueprint-company') -%>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Company's Jobs
          </h1>
        </section>
        <div class="row">
          <div class="col-md-3 pull-right" style="margin-right: 3%">
        <% if (success.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= success %>
          </div>
        <% } %>

        <% if (error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= error %>
          </div>
        <% } %>
      </div>
      </div>

        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <% if (list.totalCandidates == 0) { %>
            <h1>Zero candidates</h1>

          <% } else { %>



          <h1>Candidates who applied for <b><%= list.title %></b></h1>
            <br />
            <br />
              <% for (var i = 0; i < list.candidates.length; i++)  { %>
                <div class="col-md-3">

              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <img class="profile-user-img img-responsive img-circle" src="<%= list.candidates[i].user.profile.picture %>" style="width: 100px;
    height: 100px;">
                  <h3 class="profile-username text-center"><%= list.candidates[i].user.profile.name %></h3>

                  <% if (list.candidates[i].status === "In Progress") { %>
                  <a href="/resume/candidates/<%= list._id %>/<%= list.candidates[i].user._id %>" class="btn btn-primary btn-block"><b>Resume</b></a>
                  <% } else { %>
                    <% if (list.candidates[i].status === "Accepted") { %>
                        <span class="btn btn-success btn-block"><b><%= list.candidates[i].status %></b></a>
                    <% } else { %>
                      <span class="btn btn-danger btn-block"><b><%= list.candidates[i].status %></b></a>
                    <% } %>
                  <% } %>
                </div><!-- /.box-body -->
              </div><!-- /.box -->


              <!-- About Me Box -->
            </div>

              <% } %>
          <% } %>

          <% var checkAll = false;
            for (var i = 0; i < list.candidates.length; i++)  { %>
            <% if (list.candidates[i].status === 'In Progress') { %>
              <% checkAll = false; %>

            <% } else { %>
              <% checkAll = true; %>
            <% } %>
          <% } %>



                  <% if (checkAll)  { %>
                    <div class="row">
                      <div class="col-md-5">
                    <div class="box">
                          <div class="box-header">
                            <h3 class="box-title">Bootstrap WYSIHTML5 <small>Simple and fast</small></h3>
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                              <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                              <button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                            </div><!-- /. tools -->
                          </div><!-- /.box-header -->
                          <div class="box-body pad">
                            <form>
                              <textarea class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>


                  <% } %>
