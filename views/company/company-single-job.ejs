<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/admin/admin-header %>

  </head>
  <body class="hold-transition skin-blue sidebar-mini" style="">
    <div class="wrapper">


      <!-- Left side column. contains the logo and sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="<%= user.profile.picture %>" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p><%= user.profile.name %></p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>

          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>

            <li class="treeview">
              <a href="/">
                <i class="fa fa-edit"></i> <span>Home</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>

            <li class="treeview">
              <a href="/company-profile">
                <i class="fa fa-edit"></i> <span>Profile</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>
            <li>
              <a href="/company-jobs">
                <i class="fa fa-th"></i> <span>Jobs</span> <small class="label pull-right bg-green">
                  <%= jobs.length %>
                </small>
              </a>
            </li>


            <li class="treeview">
              <a href="#">
                <i class="fa fa-edit"></i> <span>Post a jobs</span>
                <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>
            <li>
              <a href="pages/mailbox/mailbox.html">
                <i class="fa fa-envelope"></i> <span>Mailbox</span>
                <small class="label pull-right bg-yellow">12</small>
              </a>
            </li>
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Company's Jobs
          </h1>
        </section>
        <div class="row">
          <div class="col-md-3 pull-right" style="margin-right: 3%">
        <% if (success.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= success %>
          </div>
        <% } %>

        <% if (error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= error %>
          </div>
        <% } %>
      </div>
      </div>

        <!-- Main content -->
        <section class="content">
          <!-- Small boxes (Stat box) -->
          <% if (list.totalCandidates == 0) { %>
            <h1>Zero candidates</h1>

          <% } else { %>



          <h1>Candidates who applied for <b><%= list.title %></b></h1>
            <br />
            <br />
              <% for (var i = 0; i < list.candidates.length; i++)  { %>
                <div class="col-md-3">

              <!-- Profile Image -->
              <div class="box box-primary">
                <div class="box-body box-profile">
                  <img class="profile-user-img img-responsive img-circle" src="<%= list.candidates[i].user.profile.picture %>" style="width: 100px;
    height: 100px;">
                  <h3 class="profile-username text-center"><%= list.candidates[i].user.profile.name %></h3>

                  <% if (list.candidates[i].status === "In Progress") { %>
                  <a href="/resume/candidates/<%= list._id %>/<%= list.candidates[i].user._id %>" class="btn btn-primary btn-block"><b>Resume</b></a>
                  <% } else { %>
                    <% if (list.candidates[i].status === "Accepted") { %>
                        <span class="btn btn-success btn-block"><b><%= list.candidates[i].status %></b></a>
                    <% } else { %>
                      <span class="btn btn-danger btn-block"><b><%= list.candidates[i].status %></b></a>
                    <% } %>
                  <% } %>
                </div><!-- /.box-body -->
              </div><!-- /.box -->


              <!-- About Me Box -->
            </div>

              <% } %>
          <% } %>

          <% var checkAll = false;
            for (var i = 0; i < list.candidates.length; i++)  { %>
            <% if (list.candidates[i].status === 'In Progress') { %>
              <% checkAll = false; %>

            <% } else { %>
              <% checkAll = true; %>
            <% } %>
          <% } %>






                  <% if (checkAll)  { %>
                    <div class="row">
                      <div class="col-md-5">
                    <div class="box">
                          <div class="box-header">
                            <h3 class="box-title">Bootstrap WYSIHTML5 <small>Simple and fast</small></h3>
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                              <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                              <button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                            </div><!-- /. tools -->
                          </div><!-- /.box-header -->
                          <div class="box-body pad">
                            <form>
                              <textarea class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>


                  <% } %>
                    </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
      <footer class="main-footer">
        <div class="pull-right hidden-xs">
          <b>Version</b> 2.3.0
        </div>
        <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
      </footer>
    </div><!-- ./wrapper -->

   <% include ../partials/admin/admin-interact %>
  </body>
</html>
