<% layout('layout') -%>

<h1>Company's Job</h1>

<div class="row">
  <% for(var i=0; i < jobs.length; i++)  {%>
    <div class="col-md-4">
      <a href="/company-jobs/<%= jobs[i]._id %>" style="text-decoration: none">
        <div class="thumbnail">

          <div class="caption">
            <h3><%= jobs[i].title %></h3>
            <p><%= jobs[i].body %></p>
            <h4>$<%= jobs[i].salary %></h4>
            <span>Candidates <%= jobs[i].totalCandidates %> / <%= jobs[i].candMax %></span>
          </div>
        </div>
      </a>
    </div>
    <% } %>

</div>
